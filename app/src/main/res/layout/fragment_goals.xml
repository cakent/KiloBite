<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="128dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/current_height"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="128dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/current_weight"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/getWODSButton"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginEnd="99dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_green_dark"
        android:text="@string/submit_button"
        android:textColor="@android:color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="356dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.932"/>

    <EditText
        android:id="@+id/CurrentWeight"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="0dp"/>

    <EditText
        android:id="@+id/CurrentHeight"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@android:color/holo_green_dark"
        android:text="Enter Your Stats"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.0"/>


    <CheckBox
        android:id="@+id/sun"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"

        android:text="Su"
        app:layout_constraintLeft_toRightOf="@+id/frid"
        app:layout_constraintTop_toBottomOf="@+id/wed"/>
        <CheckBox android:id="@+id/mon"
                  android:layout_width="79dp"
                  android:layout_height="41dp"
                  android:text="M"

                  android:layout_marginTop="111dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView2"
                  android:layout_marginLeft="26dp"
                  app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/tues"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="111dp"

        android:text="Tu"
        app:layout_constraintLeft_toRightOf="@+id/mon"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <CheckBox
        android:id="@+id/wed"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="111dp"

        android:text="W"
        app:layout_constraintLeft_toRightOf="@+id/tues"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <CheckBox
        android:id="@+id/thurs"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="111dp"

        android:text="Thu"
        app:layout_constraintLeft_toRightOf="@+id/wed"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <CheckBox
        android:id="@+id/frid"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="13dp"

        android:text="Fr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mon"/>

    <CheckBox
        android:id="@+id/sat"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"

        android:text="Sat"
        app:layout_constraintLeft_toRightOf="@+id/sun"
        app:layout_constraintTop_toBottomOf="@+id/thurs"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="341dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="152dp"
        android:background="@android:color/holo_green_dark"
        android:text="Set Your Schedule"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>


</android.support.constraint.ConstraintLayout>
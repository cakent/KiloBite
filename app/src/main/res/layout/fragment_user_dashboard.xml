<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/BMILabel"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/holo_blue_light"
        android:text="BMI"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/holo_blue_light"
        android:text="Workouts Completed"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BMILabel"/>

    <TextView
        android:id="@+id/ExerciseLbl"
        android:layout_width="368dp"
        android:layout_height="62dp"
        android:background="@android:color/holo_green_light"
        android:text="test"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/NextWorkout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/RepLbl"
        android:layout_width="368dp"
        android:layout_height="62dp"
        android:background="@android:color/holo_green_light"
        android:text="reps"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseLbl"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/NextWorkout"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_dark"
        android:text="next workout"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/CaloritesToBurn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/workoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text="See Workouts"
        android:textColor="@android:color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/RepLbl"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/CalLbl"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_marginEnd="231dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/holo_blue_light"
        android:text="Calories to Burn"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <TextView
        android:id="@+id/ActualBMI"
        android:layout_width="169dp"
        android:layout_height="63dp"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/darker_gray"
        android:text="filler text"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/BMILabel"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/WODsCompleted"
        android:layout_width="169dp"
        android:layout_height="63dp"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/darker_gray"
        android:text="filler"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/ActualBMI"/>

    <TextView
        android:id="@+id/CaloritesToBurn"
        android:layout_width="169dp"
        android:layout_height="63dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/darker_gray"
        android:text="filler text"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/CalLbl"
        app:layout_constraintTop_toBottomOf="@+id/WODsCompleted"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/BMILabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        app:layout_constraintRight_toLeftOf="@+id/ActualBMI"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workouts Completed"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/BMILabel"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/CalLbl"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/ExerciseLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exercise"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/NextWorkout"/>

    <TextView
        android:id="@+id/RepLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reps"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseLbl"
        android:layout_marginRight="332dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/NextWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next workout"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/CalLbl"/>

    <Button
        android:id="@+id/workoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Workouts"
        android:layout_marginRight="128dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="253dp"
        app:layout_constraintTop_toBottomOf="@+id/CaloritesToBurn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/CalLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories to Burn"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp"/>

    <TextView
        android:id="@+id/ActualBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="115dp"/>

    <TextView
        android:id="@+id/WODsCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteY="55dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="44dp"/>

    <TextView
        android:id="@+id/CaloritesToBurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/CalLbl"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/WODsCompleted"/>

</android.support.constraint.ConstraintLayout>